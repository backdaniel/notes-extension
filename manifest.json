{

	"manifest_version": 2,
	"name": "notes-extension",
	"version": "1.1",
	"description": "Simple extension for taking quick notes without leaving the browser, the data is saved to local storage.",

	"icons": {
		"16": "icons/notes-16.png",
		"32": "icons/notes-32.png",
		"48": "icons/notes-48.png",
		"128": "icons/notes-128.png"
	},

	"permissions": [
		"storage"
	],

	"browser_action": {
		"default_icon": {
			"16": "icons/notes-16.png",
			"32": "icons/notes-32.png",
			"48": "icons/notes-48.png",
			"128": "icons/notes-128.png"
		},
		"default_title": "Notes",
		"default_popup": "popup/notes.html"
	}

}
